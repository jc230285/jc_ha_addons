#!/command/with-contenv bashio
# Home Assistant Community Add-on: Flood UI
# Runs Flood UI

bashio::log.info 'Starting Flood UI...'

# Install Flood if not already installed
if [ ! -d /opt/flood ]; then
    apk add --no-cache nodejs npm git
    cd /opt || exit 1
    git clone https://github.com/jesec/flood.git
    cd flood || exit 1
    git checkout master
    npm install --production
else
    cd /opt/flood || exit 1
fi

exec node server/bin/www --port 3000 --rundir /config
